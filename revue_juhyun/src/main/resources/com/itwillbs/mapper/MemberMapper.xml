<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.MemberMapper">

  <insert id="insertMember">
    insert into members(id,passwd,name,phone,email,gender,agree,content,rdate) 
    values (#{id},#{passwd},#{name},#{phone},#{email},#{gender},#{agree},#{content},#{rdate})
  </insert>
  
  <select id="loginMember" resultType="com.itwillbs.domain.MemberDTO">
  	select * from members
  	where id = #{id} and passwd = #{passwd}
  </select>
  
  <select id="infoMember" resultType="com.itwillbs.domain.MemberDTO">
  	select * from members
  	where id = #{id}
  </select>
  
  <update id="updateMember">
  	update members
  	set name = #{name}, phone = #{phone}, email = #{email}, gender = #{gender}, agree = #{agree}
  	where id = #{id} 
  </update>
  
  <delete id="deleteMember">
  	delete from members
  	where id = #{id} and passwd = #{passwd}
  </delete>
  
  <select id="listMember" resultType="com.itwillbs.domain.MemberDTO">
  	select * from members
  </select>
  
</mapper>