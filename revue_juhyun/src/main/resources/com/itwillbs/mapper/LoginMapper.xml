<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.LoginMapper">
	
	<select id="login" resultType="com.itwillbs.domain.LoginDTO">
		select * from member
  		where member_id = #{member_id} and member_pass = #{member_pass}
	</select>
  
  
  	<insert id="register" >
  	 	insert into member(member_name,member_id,member_pass,member_phone,member_email,member_address,member_gender,member_birth, member_date, member_like_genre, isnaver) 
    	values(#{member_name},#{member_id},#{member_pass},#{member_phone},#{member_email},#{member_address},#{member_gender},#{member_birth},#{member_date},#{member_like_genre},#{isnaver})
  	</insert>
  	
  	
  	<select id="isExist" parameterType="string" resultType="int">
    	select count(*) from member
    	where member_id = #{member_id}
	</select>
	
</mapper>


